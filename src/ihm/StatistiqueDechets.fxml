<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.XYChart?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.StatistiquesDechetController"
            prefWidth="600" prefHeight="400">

    <children>
        <Label layoutX="170" layoutY="20" text="Statistiques par type de déchet"
               style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <BarChart fx:id="barChartDechets" layoutX="50" layoutY="60" prefHeight="300" prefWidth="500">
            <xAxis>
                <CategoryAxis label="Type de déchet"/>
            </xAxis>
            <yAxis>
                <NumberAxis label="Total (kg)"/>
            </yAxis>
        </BarChart>
    </children>
</AnchorPane>
