<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="539.0" prefWidth="848.0" stylesheets="@/resources/css/connexion.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HistoriqueDepotController">

    <children>

        <!-- Titre -->
        <Label layoutX="23.0" layoutY="30.0" text="Historique de mes dépôts" textFill="WHITE">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <!-- Tableau -->
        <TableView fx:id="historiqueTable" layoutX="79.0" layoutY="139.0" prefHeight="237.0" prefWidth="692.0">

            <columns>
                <TableColumn fx:id="colBac" prefWidth="100" text="Bac" />
                <TableColumn fx:id="colType" prefWidth="140" text="Type de déchet" />
                <TableColumn fx:id="colQuantite" prefWidth="120" text="Quantité" />
                <TableColumn fx:id="colDateDepot" prefWidth="140" text="Date du dépôt" />
				<TableColumn fx:id="colPoints" prefWidth="100" text="Points gagnés" />
                
            </columns>
        </TableView>

        <!-- Bouton retour -->
        <Button fx:id="btnRetour" layoutX="358.0" layoutY="421.0" prefHeight="47.0" prefWidth="134.0" style="-fx-font-weight: bold;" text="Retour" />
    </children>
</AnchorPane>
