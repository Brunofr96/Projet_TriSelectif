<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400" prefWidth="700" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CentreDeTriController">

    <children>

        <!-- TableView -->
        <TableView fx:id="bacsTable" layoutX="20" layoutY="20" prefHeight="250" prefWidth="660">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                <TableColumn fx:id="colType" prefWidth="150" text="Type" />
                <TableColumn fx:id="colCapacite" prefWidth="120" text="Capacité Max" />
                <TableColumn fx:id="colPoids" prefWidth="120" text="Poids Actuel" />
                <TableColumn fx:id="colEmplacement" prefWidth="120" text="Emplacement" />
                <TableColumn fx:id="colPleine" prefWidth="100" text="Pleine ?" />
            </columns>
        </TableView>

        <!-- Button -->
        <Button fx:id="btnAjouter" layoutX="92.0" layoutY="300.0" prefWidth="150" text="➕ Ajouter Bac" />
        <Button fx:id="btnSupprimer" layoutX="275.0" layoutY="300.0" prefWidth="150" text="➖ Supprimer Bac" />
        <Button fx:id="btnCollecter" layoutX="460" layoutY="300" prefWidth="150" text=" Collecter Déchets" />
        
       	<Button layoutX="300.0" layoutY="360.0" onAction="#handleFermer" style="-fx-font-weight: bold;" text="Fermer la page" />
       	

    </children>
</AnchorPane>
