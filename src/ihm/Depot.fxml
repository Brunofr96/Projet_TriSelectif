        <Label fx:id="messageLabel" textFill="green" />

        <ComboBox fx:id="comboBac" prefHeight="25.0" prefWidth="564.0" promptText="Sélectionner un bac" />
        <ComboBox fx:id="comboType" prefHeight="25.0" prefWidth="562.0" promptText="Type de déchet" />
        <TextField fx:id="poidsField" prefHeight="29.0" prefWidth="409.0" promptText="Poids (kg)" />
        <Button onAction="#validerDepot" prefWidth="200" style="-fx-background-color: #2E8B57;" text="Valider dépôt" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
        <Button fx:id="retourButton" onAction="#retourAccueil" prefWidth="200" text="Retour à l'accueil" />
    </VBox>
     <Label layoutX="264.0" layoutY="41.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Dépôt de déchets" textFill="WHITE">
      <font>
         <Font name="System Bold" size="16.0" /> 
      </font>
