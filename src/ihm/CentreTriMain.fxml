<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.CentreTriMainController"
            prefWidth="800" prefHeight="500">

    <!-- Menu latéral -->
    <left>
        <VBox spacing="20.0"
              style="-fx-background-color: #f0f0f0; -fx-padding: 20;">
            <Button fx:id="gestionBacsButton"
                    text="Gestion des bacs"
                    onAction="#afficherGestionBacs" />
            <Button fx:id="statistiquespoubellesButton"
                    text="Stat. Poubelles"
                    onAction="#afficherStatistiquesPoubelles" />
            <Button fx:id="statistiquesDechetsButton"
                    text="Stat. Déchets"
                    onAction="#afficherStatistiquesDechets" />
        </VBox>
    </left>

    <!-- Contenu central dynamique -->
    <center>
        <AnchorPane fx:id="mainContainer" />
    </center>
</BorderPane>
